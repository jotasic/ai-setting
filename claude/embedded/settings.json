{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "preferences": {
    "verbosity": "minimal",
    "codeOnly": true,
    "maxExplanationLines": 3
  },
  "permissions": {
    "allow": [
      "Bash(iarbuild *)",
      "Bash(make *)",
      "Bash(arm-none-eabi-gcc *)",
      "Bash(arm-none-eabi-objdump *)",
      "Bash(arm-none-eabi-size *)",
      "Bash(arm-none-eabi-nm *)",
      "Bash(arm-none-eabi-readelf *)",
      "Bash(openocd *)",
      "Bash(st-flash *)",
      "Bash(st-info *)",
      "Bash(JLinkExe *)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git checkout*)",
      "Bash(git merge*)",
      "Bash(git stash*)",
      "Bash(git tag*)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(cppcheck *)",
      "Bash(pc-lint *)",
      "Bash(pclp64 *)",
      "Bash(splint *)",
      "Bash(gcc -E *)",
      "Bash(gcc -fsyntax-only *)",
      "Bash(wc -l *)",
      "Bash(sort *)",
      "Bash(diff *)",
      "Read",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(git reset --hard*)",
      "Bash(git clean -fd*)",
      "Bash(chmod 777 *)",
      "Bash(chmod -R 777*)",
      "Bash(curl * | bash)",
      "Bash(sudo rm*)",
      "Bash(st-flash erase)",
      "Bash(openocd * flash erase_sector *)"
    ]
  },
  "env": {
    "EDITOR": "code --wait",
    "GIT_EDITOR": "code --wait"
  }
}
