{
  "$schema": "https://json.schemastore.org/claude-mcp.json",
  "_comment": "MCP 서버 설정 예제. 실제 사용 시 경로와 설정을 조정하세요.",
  "mcpServers": {
    "filesystem": {
      "_comment": "파일시스템 접근 MCP 서버",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-filesystem",
        "/path/to/allowed/directory"
      ]
    },
    "github": {
      "_comment": "GitHub API MCP 서버",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "postgres": {
      "_comment": "PostgreSQL MCP 서버",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      }
    },
    "memory": {
      "_comment": "지식 그래프 메모리 MCP 서버",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-memory"]
    },
    "puppeteer": {
      "_comment": "브라우저 자동화 MCP 서버",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-puppeteer"]
    },
    "slack": {
      "_comment": "Slack MCP 서버",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    },
    "fetch": {
      "_comment": "HTTP Fetch MCP 서버",
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "brave-search": {
      "_comment": "Brave Search MCP 서버",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "sequential-thinking": {
      "_comment": "순차적 사고 MCP 서버 (복잡한 추론)",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sequential-thinking"]
    }
  }
}
