{
  "$schema": "https://json.schemastore.org/claude-hooks.json",
  "_comment": "Claude Code 훅 설정. 이벤트 발생 시 자동 실행됩니다.",
  "hooks": {
    "PreToolUse": [
      {
        "_comment": "위험한 Bash 명령어 차단",
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$CLAUDE_TOOL_INPUT\" | grep -qE '(rm -rf|sudo|chmod 777|> /dev)' && echo 'BLOCK: Dangerous command detected' && exit 1 || exit 0"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "_comment": "파일 수정 후 자동 린트 (선택적)",
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "# echo 'File modified: Auto-lint could run here'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "_comment": "작업 완료 알림",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "# 알림 명령어 (예: osascript, notify-send)"
          }
        ]
      }
    ],
    "Stop": [
      {
        "_comment": "세션 종료 시 정리 작업",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "# 정리 작업 (예: 임시 파일 삭제, 상태 저장)"
          }
        ]
      }
    ]
  }
}
