{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "preferences": {
    "verbosity": "minimal",
    "codeOnly": true,
    "maxExplanationLines": 3
  },
  "permissions": {
    "allow": [
      "Bash(ros2 *)",
      "Bash(colcon build*)",
      "Bash(colcon test*)",
      "Bash(source /opt/ros/*)",
      "Bash(rosdep *)",
      "Bash(roslaunch *)",
      "Bash(rosrun *)",
      "Bash(ros2 topic *)",
      "Bash(ros2 node *)",
      "Bash(ros2 service *)",
      "Bash(ros2 action *)",
      "Bash(ros2 param *)",
      "Bash(ros2 launch *)",
      "Bash(ros2 bag *)",
      "Bash(rviz2*)",
      "Bash(rqt*)",
      "Bash(python3 -m pytest*)",
      "Bash(python3 *)",
      "Bash(pip install*)",
      "Bash(pip3 install*)",
      "Bash(docker run*)",
      "Bash(docker build*)",
      "Bash(docker ps*)",
      "Bash(docker logs*)",
      "Bash(docker exec*)",
      "Bash(docker-compose *)",
      "Bash(docker compose *)",
      "Bash(Unity *)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git checkout*)",
      "Bash(git merge*)",
      "Bash(git stash*)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(xacro *)",
      "Bash(check_urdf *)",
      "Bash(urdf_to_graphviz *)",
      "Bash(moveit_setup_assistant*)",
      "Read",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/credentials.json)",
      "Read(**/secrets.json)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(git reset --hard*)",
      "Bash(sudo rm*)",
      "Bash(chmod 777 *)",
      "Bash(docker rm -f*)",
      "Bash(docker system prune -af*)"
    ]
  },
  "env": {
    "ROS_DISTRO": "humble",
    "ROS_DOMAIN_ID": "0",
    "RMW_IMPLEMENTATION": "rmw_fastrtps_cpp",
    "UNITY_PROJECT_PATH": "./unity_ws",
    "ROS2_WS": "./ros2_ws"
  }
}
